<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
	   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<!--Services -->
	<bean id="logService" class="com.ideyatech.core.service.impl.LogServiceImpl">
		<property name="dao" ref="auditLogDAO"/>
	</bean>
	
	<bean id="systemCodesService" class="com.ideyatech.core.service.impl.BaseCrudServiceImpl">
		<property name="dao" ref="systemCodesDAO"/>
	</bean>
	<bean id="userService" class="com.ideyatech.core.service.impl.UserServiceImpl" autowire="byName">
		<property name="dao" ref="coreUserDAO"/>
		<property name="confirmURL" value="${confirm.password.reset.url}" />
		<property name="roles">
			<ref bean="rolesMap" />
		</property>
	</bean>
	<bean id="userGroupService" class="com.ideyatech.core.service.impl.UserGroupServiceImpl" autowire="byName">
		<property name="dao" ref="userGroupDAO"/>
		<property name="roles">
			<ref bean="rolesMap" />
		</property>
	</bean> 
	
	<bean id="mailingService" class="com.ideyatech.core.service.impl.MailingServiceImpl" autowire="byName"/>
		
</beans>