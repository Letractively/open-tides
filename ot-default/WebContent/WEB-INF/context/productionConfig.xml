<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util 
    http://www.springframework.org/schema/util/spring-util-3.0.xsd">
           
    <bean id="environmentProperties" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName">
			<value>java:comp/env/serverProperties</value>
		</property>
		<property name="defaultObject" value="classpath:resources/ideyatech.properties"></property>
	</bean>
    
	<!-- Property File Configuration -->
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
		 		<value>classpath:resources/tides.properties</value>
		 		<value>classpath:resources/ideyatech.properties</value>
		 	</list>
		</property>		
	</bean>	

	<!--  Define dataSource as JNDI -->
	<bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName">
			<value>${database.jndi}</value>
		</property>
	</bean>
	
 	<!-- Datasource for reporting purposes -->
	<bean id="reportDataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName">
			<value>${database.jndi}</value>
		</property>
	</bean>
 	<!--
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${database.driver}"/>
		<property name="url" value="${database.url}"/>
		<property name="username" value="${database.username}"/>
		<property name="password" value="${database.password}"/>
	</bean>
 	-->
 
</beans>